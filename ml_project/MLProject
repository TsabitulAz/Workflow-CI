name: car-evaluation-training

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      data_path:
        type: str
        default: car_evaluation_train_encoded.csv
      experiment_name:
        type: str
        default: "car_evaluation_experiment"
    command: >
      python modelling.py
      --data_path {data_path}
      --experiment_name {experiment_name}
